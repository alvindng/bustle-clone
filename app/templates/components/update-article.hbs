{{#if updateArticleForm}}
  <h4>Edit {{article.headline}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="category">Category</label>
        {{input value=category id="category" placeholder=article.category}}
      </div>

      <div class="form-group">
        <label for="headline">Headline</label>
        {{input value=headline id="headline" placeholder=article.headline}}
      </div>

      <div class="form-group">
        <label for="body">Body</label>
        {{input value=body id="body" placeholder=article.body}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image" placeholder=article.image}}
      </div>

      {{input value=time id="time" type="hidden"}}

      <button {{action 'update' article}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-warning" {{action 'updateArticleForm'}}>Update</button>
{{/if}}
