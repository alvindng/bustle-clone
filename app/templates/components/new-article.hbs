{{#if addNewArticle}}
  <h3>New Article</h3>
  <div>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="headline">Headline</label>
      {{input value=headline id="headline"}}
    </div>

    <div class="form-group">
      <label for="body">Body</label>
      {{input value=body id="body"}}
    </div>

    <div class="form-group">
      <label for="category">Category</label>
      {{input value=category id="category"}}
    </div>

    <div class="form-group">
      <label for="image">Image</label>
      {{input value=image id="image"}}
    </div>

    <div class="form-group">
      <label for="time">Timestamp</label>
      {{input value=time id="time"}}
    </div>

    <button {{action 'save'}}>Save</button>
  </form>
  </div>
{{else}}
  <button class="btn btn-success" {{action 'articleFormShow'}}>New Article</button>
{{/if}}
